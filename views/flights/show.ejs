<%- include('../partials/header') %>

<section id="show-page">
  <div>Departure: </div>
  <div><%= flight.departure %></div>
  <div>Arrival: </div>
  <div><%= flight.arrival %></div>
  <div>VFR/IFR: </div>
  <div><%= flight.vfrifr %></div>
  <div>Has Fuel Services: </div>
  <div><%= flight.fuel ? 'Yes' : 'No' %></div>
  <!-- start enroute list -->
  <div>Cast:</div>
  <ul>
    <%- flight.cast.map(p => 
      `<li>${p.name} <small>${p.born.toLocaleDateString()}</small></li>`
    ).join('') %>
  </ul>
  <!-- end enroute list -->
</section>
<!-- add to enroute form below this comment -->
<form id="add-per-to-cast" action="/flights/<%= flight._id %>/enroutes" method="POST">
  <select name="enrouteId">
    <%- enroutes.map(p => 
      `<option value="${p._id}">${p.name}</option>`
    ).join('') %>
  </select>
  <button type="submit">Add Enroute/Alternate</button>
</form>

<br><br>
<h2>Notes</h2>

<% if (user) {%>
  <form id="add-review-form" method="POST" action="/flights/<%= flight._id %>/reviews">
    <label>Review:</label>
    <textarea departure="content"></textarea>
    <label>Rating:</label>
    <select departure="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <input type="submit" value="Add Review">
  </form>
<%}%>

<% if (flight.reviews.length) { %>
  <table>
    <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Review</th>
      <th>Rating</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% let total = 0 %>
    <% flight.reviews.forEach(function(r) { %>
      <% total += r.rating %>
      <tr>
        <td class="review-user"><img src="<%= r.userAvatar %>"><%= r.userName %></td>
        <td><%= r.createdAt.toLocaleDateString() %></td>
        <td><%= r.content %></td>
        <td><%= r.rating %></td>
        <td>
          <% if (user && user._id.equals(r.user)) { %>
            <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
              <button type="submit">X</button>
            </form>
          <% } %>
        </td>
      </tr>
    <% }); %>
    <tr>
      <td colspan="3"></td>
      <td><strong><%= (total / flight.reviews.length).toFixed(1) %></strong></td>
    </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>


<%- include('../partials/footer') %>